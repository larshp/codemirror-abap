{
  "name": "codemirror-abap",
  "version": "0.1.9",
  "description": "ABAP mode for CodeMirror",
  "scripts": {
    "dev": "nodemon --watch src/ --exec npm run build --ext js,ts",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc --pretty",
    "postcompile": "npm run lint",
    "pretest": "npm run build",
    "test": "mocha"
  },
  "main": "build/abap.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larshp/codemirror-abap.git"
  },
  "keywords": [
    "ABAP",
    "CodeMirror"
  ],
  "author": "Lars Hvam Petersen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/larshp/codemirror-abap/issues"
  },
  "homepage": "https://github.com/larshp/codemirror-abap/#readme",
  "devDependencies": {
    "@types/codemirror": "0.0.97",
    "chai": "^4.2.0",
    "codemirror": "^5.57.0",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.0",
    "tslint": "^3.15.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {}
}
